{% extends "common.twig" %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet/less" type="text/css" href="css/main.less"/>
{% endblock style %}

{% block js %}
    <script type="module" src="js/main.js"></script>
{% endblock js %}


{% block body %}
    {{ parent() }}
    
    <div id="login" class="top-container cm-noselect" style="width:{{ container.x }}rem;height:{{ container.y }}rem">
        <span>ВХОД</span>
        <input id="pass" type="password" class="cm-noselect" data-pass="{{ pass }}"/>
        {# <button> ? </button> #}
    </div>
    
    <div id="menu1" class="top-container cm-noselect" style="width:{{ container.x }}rem;height:{{ container.y }}rem">
        <div class="head">
            {# <span>Меню</span> #}
            <i class="back-button fas fa-arrow-left"></i>
        </div>
        <div class="box">
            <div class="data">
                <div>
                    <div class="cm-item" data-tag="email">Электронная связь</div>
                    <div class="cm-item" data-tag="system">Системы корабля</div>
                    <div class="cm-item" data-tag="journal">Корабельный журнал</div>
                    <div class="cm-item" data-tag="documents">Документация корабля</div>
                    <div class="cm-item">1111</div>
                    <div class="cm-item">2222</div>
                    <div class="cm-item">3333</div>
                    <div class="cm-item">4444</div>
                    <div class="cm-item">5555 55555 5555 55555 </div>
                    <div class="cm-item">6666666666666666</div>
                    <div class="cm-item">99999</div>
                    
                </div>
            </div>
            <div class="direct">
                <i class="up-button far fa-caret-square-up"></i>
                <i class="down-button far fa-caret-square-down"></i>
            </div>
        </div>
    </div>
{% endblock %}
